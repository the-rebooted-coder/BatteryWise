<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp">

    <ImageView
        android:id="@+id/daydreamImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:contentDescription="DayDream illustration"
        android:src="@drawable/ic_daydream_intro" />

    <TextView
        android:id="@+id/daydreamIntroText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textAlignment="viewStart"
        android:fontFamily="@font/productsans"
        android:gravity="center"
        android:text="DayDream brings a desk-clock to your screen while your phone is charging.\n\nRelax and enjoy a serene view while your device powers up.\n\nBest Part, this experience takes negligible power."
        android:textColor="?android:textColorPrimary"
        android:textSize="16sp"
        tools:ignore="RtlCompat" />
</LinearLayout>