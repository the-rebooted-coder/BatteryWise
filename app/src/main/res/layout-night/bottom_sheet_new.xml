<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/bottom_sheet_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textWhatsNew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/what_new"
        android:textSize="20sp"
        android:paddingStart="20dp"
        android:fontFamily="@font/productsansbold"
        android:layout_marginTop="20dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        android:paddingStart="10dp"
        app:drawableTint="@color/green"
        android:fontFamily="@font/productsansbold"
        android:text="Auto Dismissible Alerts"
        app:drawableStartCompat="@drawable/access_time" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:paddingStart="18dp"
        android:fontFamily="@font/productsans"
        android:paddingEnd="10dp"
        android:text="When SafeCharge is enabled, you can now set the ringing alert to auto-dismiss after one minute."/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        app:drawableTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/productsansbold"
        android:text="Swipe to Dismiss"
        app:drawableStartCompat="@drawable/stop_ringing" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:paddingStart="18dp"
        android:fontFamily="@font/productsans"
        android:paddingEnd="10dp"
        android:text="When your device has charged, you will now be shown a graceful slider to dismiss the ringing alert."/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="18sp"
        android:drawablePadding="5dp"
        app:drawableTint="@color/green"
        android:paddingStart="10dp"
        android:fontFamily="@font/productsansbold"
        android:text="Dynamic Battery Levels"
        app:drawableStartCompat="@drawable/sparkle" />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:paddingStart="18dp"
        android:fontFamily="@font/productsans"
        android:paddingEnd="10dp"
        android:text="SafeCharge now shows colour representing your current battery levels inside it and change dynamically."/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cornerRadius="8dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/green"
            android:text="Continue"
            android:fontFamily="@font/productsansbold"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</LinearLayout>
