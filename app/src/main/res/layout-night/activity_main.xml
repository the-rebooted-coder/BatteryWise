<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/productInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/productInfo"
        android:textAlignment="center"
        android:padding="10dp"
        android:layout_above="@+id/batterySaveText"
        android:fontFamily="@font/productsansbold"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/batterySaveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/learn_more"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/saveBatteryBtn"
        android:fontFamily="@font/productsans"
        android:drawablePadding="5dp"
        android:textSize="18sp"
        app:drawableLeftCompat="@drawable/baseline_info_24_white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveBatteryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/enable"
        android:fontFamily="@font/productsans"
        android:layout_centerInParent="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/closeBatteryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/disable"
        android:visibility="gone"
        android:fontFamily="@font/productsans"
        android:layout_centerInParent="true"/>

</RelativeLayout>